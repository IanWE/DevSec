<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:text="    Thanks for granting &quot;Usage Stats&quot; permission. \n    Before we can start the user study, we need to test your phone hardware first. For two or three of the five apps listed below, please open the app and use the in-app functions to activate your camera and or microphone.  For example in whatsapp and Facebook messenger, you may try to take a photo and send a voice message.
\n    You may begin your tests now, and come back here to click the &quot;Finish&quot; button after the tests on two or three of these five apps."
        android:selectAllOnFocus="true"
        android:textSize="16sp" />
    <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
    <LinearLayout
        android:id="@+id/layout_of_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/msg"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_height="20sp"
            android:layout_width="match_parent"
            android:text="1. Whatsapp"
            android:gravity="center"
            />
            <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
        <TextView
            android:layout_height="20sp"
            android:layout_width="match_parent"
            android:text="2. Facebook Messenger"
            android:gravity="center"
            />
            <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
        <TextView
            android:layout_height="20sp"
            android:layout_width="match_parent"
            android:text="3. Facebook"
            android:gravity="center"
            />
            <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
        <TextView
            android:layout_height="20sp"
            android:layout_width="match_parent"
            android:text="4. Camera"
            android:gravity="center"
            />
            <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
        <TextView
            android:layout_height="20sp"
            android:layout_width="match_parent"
            android:text="5. Sound Recorder"
            android:gravity="center"
            />
        <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
</LinearLayout>
    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/layout_of_apps"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="#ff0"
        android:textSize="18sp" />
    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:text="@string/Instruction"
        />
        -->
</LinearLayout>