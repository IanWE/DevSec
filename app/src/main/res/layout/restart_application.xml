<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/msg_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:text="    You have conducted the hardware test and we are now processing the data."
        android:selectAllOnFocus="true"
        android:textSize="18sp" />
    <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>

    <Button
        android:id="@+id/recheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/button_shape"
        android:text="Conduct hardware test again"
        android:textAllCaps="false"
        android:textColor="#ff0"
        android:textSize="18sp" />
    <Button
        android:id="@+id/checkpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/button_shape"
        android:text="Check if my hardware test had passed"
        android:textAllCaps="false"
        android:textColor="#22ffff"
        android:textSize="18sp" />
</LinearLayout>